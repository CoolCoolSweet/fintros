<h1>New Blog Post</h1>
<%= form_for :articles, url: articles_path, :html => {class: 'new-post-form', id: 'new-post-form'}, remote: true do |f| %>
        <div>
        <%= f.label :title, :class => 'title-label' %>
        <%= f.text_field :title, :required => true, :class => 'title-input' %>
        </div>
        <div>
        <%= f.label :author, :class => 'author-label' %>
        <%= f.text_field :author, :required => true, :class => 'author-input' %>
        </div>
        <div class='body'>
        <%= f.label :body, :class => 'body-label' %>
        <%= f.text_area :body, :required => true, :class => 'body-input' %>
        </div>
        <%= f.submit "Add Post", :class => 'submit' %>
<% end %>